<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <!-- Background -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF000000">fen_common/white.png</texture>
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="80" />
            </animation>
        </control>
        <!-- Colors Panel -->
        <control type="group">
            <left>130</left>
            <top>90</top>
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="50" end="100" time="200" delay="300" center="auto" tween="quadratic" easing="out" />
            </animation>
            <control type="group">
                <width>1660</width>
                <control type="image">
                    <height>900</height>
                    <texture border="16" colordiffuse="FF302F2F">fen_common/dialog.png</texture>
                </control>
                <control type="image">
                    <left>30</left>
                    <top>30</top>
                    <width>70</width>
                    <height>70</height>
                    <align>left</align>
                    <aligny>top</aligny>
                    <aspectratio aligny="top">keep</aspectratio>
                    <texture colordiffuse="FFCCCCCC">fen_common/fen.png</texture>
                </control>
                <control type="label">
                    <top>55</top>
                    <left>5</left>
                    <width max="1650">auto</width>
                    <height>20</height>
                    <font>font14</font> <!-- FEN_33 -->
                    <textcolor>FFCCCCCC</textcolor>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>[B]$ADDON[plugin.video.fen 33106][/B]</label>
                </control>
            </control>
            <!-- Color picker panel -->
            <control type="panel" id="2000">
                <left>30</left>
                <top>130</top>
                <width>1365</width>
                <height>840</height>
                <orientation>vertical</orientation>
                <itemlayout height="44" width="44">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>40</width>
                        <height>40</height>
                        <texture>$INFO[ListItem.Property(image)]</texture>
                    </control>
                </itemlayout>
                <focusedlayout height="44" width="44">
                    <control type="group">
                        <animation effect="zoom" time="100" tween="sine" easing="inout" start="100" end="140" center="auto">Focus</animation>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>44</width>
                            <height>44</height>
                            <texture colordiffuse="FF302F2F">fen_common/white.png</texture>
                        </control>
                        <control type="image">
                            <left>2</left>
                            <top>2</top>
                            <width>40</width>
                            <height>40</height>
                            <texture>$INFO[ListItem.Property(image)]</texture>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <!-- Color preview -->
            <control type="group">
                <left>1420</left>
                <top>617</top>
                <control type="label">
                    <width>210</width>
                    <height>60</height>
                    <align>center</align>
                    <aligny>bottom</aligny>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <font>font24</font>
                    <shadowcolor>FF302F2F</shadowcolor>
                    <label>[B][COLOR=$INFO[Container(2000).ListItem.Property(label)]]$INFO[Container(2000).ListItem.Property(label)][/COLOR][/B]</label>
                </control>
                <control type="image">
                    <left>5</left>
                    <top>50</top>
                    <width>200</width>
                    <height>200</height>
                    <aspectratio>stretch</aspectratio>
                    <texture diffuse="fen_diffuse/landscape_w284_h160.png">$INFO[Container(2000).ListItem.Property(image)]</texture>
                </control>
            </control>
            <!-- Buttons -->
            <control type="group">
                <left>1425</left>
                <top>130</top>
                <control type="button" id="10">
                    <description>OK</description>
                    <width>200</width>
                    <height>60</height>
                    <onup>11</onup>
                    <ondown>11</ondown>
                    <onleft>2000</onleft>
                    <onright>2000</onright>
                    <label>[B]$ADDON[plugin.video.fen 32839][/B]</label>
                    <font>font12</font> <!-- FEN_26 -->
                    <textcolor>FFB7B4BB</textcolor>
                    <focusedcolor>$INFO[Window(10000).Property(fen.highlight)]</focusedcolor>
                    <texturefocus colordiffuse="FFCCCCCC" border="30">fen_common/circle.png</texturefocus>
                    <texturenofocus colordiffuse="FF4a4347" border="30">fen_common/circle.png</texturenofocus>
                    <align>center</align>
                </control>
                <control type="button" id="11">
                    <description>Cancel</description>
                    <top>80</top>
                    <width>200</width>
                    <height>60</height>
                    <onup>10</onup>
                    <ondown>10</ondown>
                    <onleft>2000</onleft>
                    <onright>2000</onright>
                    <label>[B]$ADDON[plugin.video.fen 32840][/B]</label>
                    <font>font12</font> <!-- FEN_26 -->
                    <textcolor>FFB7B4BB</textcolor>
                    <focusedcolor>$INFO[Window(10000).Property(fen.highlight)]</focusedcolor>
                    <texturefocus colordiffuse="FFCCCCCC" border="30">fen_common/circle.png</texturefocus>
                    <texturenofocus colordiffuse="FF4a4347" border="30">fen_common/circle.png</texturenofocus>
                    <align>center</align>
                </control>
            </control>
        </control>
    </controls>
</window>