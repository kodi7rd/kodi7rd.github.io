                    <left>640</left>
                    <top>110</top>
                    <width>250</width>
                    <height>250</height>
                    <aspectratio aligny="top">stretch</aspectratio>
                </control>
                <control type="label" id="2000">
                    <width>910</width>
                    <top>12</top>
                    <left>5</left>
                    <height>20</height>
                    <align>center</align>
                    <font>font12</font> <!-- TWILIGHT_26 -->
