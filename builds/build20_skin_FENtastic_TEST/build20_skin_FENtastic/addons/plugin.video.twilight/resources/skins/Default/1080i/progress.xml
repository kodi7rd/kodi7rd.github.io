                    <textcolor>FFCCCCCC</textcolor>
                </control>
                <control type="progress" id="5000">
                    <description>Progressbar</description>
                    <top>395</top>
                    <left>0</left>
                    <width>910</width>
                    <height>25</height>
                    <reveal>true</reveal>
