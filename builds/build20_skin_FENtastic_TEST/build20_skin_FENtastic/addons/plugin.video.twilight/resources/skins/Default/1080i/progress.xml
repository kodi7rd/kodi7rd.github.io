                <left>2</left>
                <top>2</top>
                <width>45</width>
                <height>45</height>
                <align>right</align>
                <aligny>top</aligny>
                <aspectratio aligny="top">keep</aspectratio>
                <texture colordiffuse="B3CCCCCC">twilight_common/twilight.png</texture>
            </control>
            <control type="group">
                <left>5</left>
                <top>5</top>
                <control type="label">
                    <top>-40</top>
                    <left>0</left>
                    <width>1035</width>
                    <height>5</height>
