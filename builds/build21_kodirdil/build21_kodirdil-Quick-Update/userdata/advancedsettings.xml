<advancedsettings>
	<cache>
		<buffermode>0</buffermode>         <!-- Buffer all internet filesystems (like "2" but additionally also ftp, webdav, etc.) (default) -->
		<memorysize>139460608</memorysize> <!-- 133MB Cache (Uses 400MB RAM) -->
		<readfactor>10</readfactor>
	</cache>
	<network>
		<disablehttp2>true</disablehttp2> <!-- Allows disabling HTTP2 for broken Curl / HTTP2 servers -->
		<disableipv6>true</disableipv6>   <!-- Certain hardware/OS combinations have trouble with ipv6. Set "true" to disable -->
	</network>
	<scanirserver>false</scanirserver> <!-- Used to disable the regular connection attempts to the IR Server Suite when there is no remote to connect to. -->
	<imageres>9999</imageres> <!-- Using <imageres>9999</imageres> will allow caching artwork at original size. -->
	<packagefoldersize>50</packagefoldersize> <!-- this example would keep up to 70MB of add-on packages. -->
</advancedsettings>