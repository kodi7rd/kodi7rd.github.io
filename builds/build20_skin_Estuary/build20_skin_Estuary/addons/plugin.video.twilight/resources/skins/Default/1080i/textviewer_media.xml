<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF000000">twilight_common/white.png</texture>
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="80" time="200" tween="sine" easing="in" />
            </animation>
        </control>
        <control type="group">
            <left>100</left>
            <top>135</top>
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="50" end="100" time="200" center="auto" tween="quadratic" easing="out" />
            </animation>
            <control type="image">
                <height>810</height>
                <width>1720</width>
                <texture border="16" colordiffuse="FF302F2F">twilight_common/dialog.png</texture>
            </control>
            <control type="group">
                <control type="image">
                    <left>1170</left>
                    <top>10</top>
                    <height max="792">auto</height>
                    <width max="530">auto</width>
                    <align>center</align>
                    <aligny>center</aligny>
                    <aspectratio>keep</aspectratio>
                    <texture diffuse="twilight_diffuse/poster_w217_h320.png">$INFO[Window.Property(poster)]</texture>
                </control>
                <control type="image">
                    <left>7</left>
                    <top>7</top>
                    <width>45</width>
                    <height>45</height>
                    <align>right</align>
                    <aligny>top</aligny>
                    <aspectratio aligny="top">keep</aspectratio>
                    <texture colordiffuse="B3CCCCCC">twilight_common/twilight.png</texture>
                </control>
                <control type="textbox" id="2001">
                    <top>50</top>
                    <left>20</left>
                    <width>1120</width>
                    <height>690</height>
                    <font>font14</font> <!-- TWILIGHT_33 -->
                    <align>center</align>
                    <aligny>center</aligny>
                    <textcolor>FFB7B4BB</textcolor>
                    <pagecontrol>2061</pagecontrol>
                </control>
                <control type="scrollbar" id="2061">
                    <left>1155</left>
                    <top>10</top>
                    <width>15</width>
                    <height>790</height>
                    <texturesliderbackground colordiffuse="FF302F2F">twilight_common/white.png</texturesliderbackground>
                    <texturesliderbar colordiffuse="FF555556">twilight_common/white.png</texturesliderbar>
                    <texturesliderbarfocus colordiffuse="$INFO[Window(10000).Property(twilight.highlight)]">twilight_common/white.png</texturesliderbarfocus>
                    <onleft>2061</onleft>
                    <onright>2061</onright>
                    <showonepage>false</showonepage>
                    <orientation>vertical</orientation>
                </control>
            </control>
        </control>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="50" end="100" time="200" center="auto" tween="quadratic" easing="out" />
            </animation>
            <control type="image">
                <top>515</top>
                <left>30</left>
                <width>50</width>
                <height>50</height>
                <visible>String.IsEqual(Window.Property(previous_display),true)</visible>
                <texture>twilight_common/arrow_left.png</texture>
            </control>
            <control type="image">
                <top>515</top>
                <left>1840</left>
                <width>50</width>
                <height>50</height>
                <visible>String.IsEqual(Window.Property(next_display),true)</visible>
                <texture flipx="true">twilight_common/arrow_left.png</texture>
            </control>
        </control>
    </controls>
</window>
