		<setting id="subtitle_trans_cache"  type="number"  label="מספר כתובית מקסימלי בקאש" visible="true" default="15"/>
	</category>
    <category label="הגדרות כלליות">

		<setting id="time_s"  type="number"  label="זמן חיפוש מקסימלי" visible="true" default="15"/>
		<setting tfype="sep"/>

		<setting id="force" label="הורד למרות שיש כתוביות" type="bool" default="true" />
		<setting type="sep"/>
		
		<setting label="הורדת כתוביות אוטומטית" type="lsep"/>
		<setting id="autosub" label="אפשר הורדת כתוביות אוטומטית" type="bool" default="true" />
		<setting id="use_video_tagline_only_for_sort_subtitles" label="התאמה לפי אחוזים מTagLine בלבד" type="bool" default="false" />
		<setting id="pause" label="השהה ווידאו בזמן חיפוש כתוביות" type="bool" default="false" />
		<setting id="ExcludeTime" type="number" label="אל תוריד לסרטון קצר מ-" default="1"/> 
		
		<setting label="('idanplus','sdarot.tv','youtube','kids_new' Excluded)" type="lsep"/>
		<setting label="אל תכלול הרחבה פסיק בניהם" type="lsep"/>
		
        <setting id="ExcludeAddos" type="text" source="video" label="אל תכלול הרחבות" default="" />


		<setting id="Debug" label="Debug" type="bool" default="false" />
		<setting id="show_debug" type="bool" label="show_debug" default="false" />
