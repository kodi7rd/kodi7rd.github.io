		<setting id="OSpass2" type="text" option = "hidden" label="סיסמה ב-Opensubtitle" default=""/>
		<setting id="get_subs" type="text" option = "hidden" label="סיסמה ב-Opensubtitle" default="" visible="false" />
	</category>
	<category label="מקורות">
		<setting label="היכן לחפש" type="lsep"/>
		
