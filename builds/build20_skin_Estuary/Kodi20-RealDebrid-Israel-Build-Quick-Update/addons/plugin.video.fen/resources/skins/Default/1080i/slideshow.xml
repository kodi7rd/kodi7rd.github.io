<?xml version="1.0" encoding="UTF-8"?>
<window>
    <animation type="WindowOpen" reversible="false">
        <effect type="fade" start="0" end="100" time="400" tween="sine" easing="in" />
        <effect type="zoom" start="0" end="100" time="400" center="auto" tween="quadratic" easing="out" />
    </animation>
    <controls>
        <control type="group">
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture colordiffuse="FF000000">fen_common/white.png</texture>
            </control>
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>$INFO[Window.Property(fanart)]</texture>
                <animation effect="fade" start="0" end="35" time="0" tween="sine">WindowOpen</animation>
            </control>
        </control>
        <control type="image">
            <left>880</left>
            <top>450</top>
            <width max="140">auto</width>
            <height max="140">auto</height>
            <texture flipx="true" colordiffuse="FFFAFAFA">fen_common/spinners/loading-spinner.png</texture>
            <visible>!Container(5000).OnScrollPrevious + !Container(5000).OnScrollNext</visible>
            <animation effect="fade" time="320" delay="400">Visible</animation>
            <animation effect="rotate" end="360" center="auto" time="1200" loop="true" reversible="false" condition="true">Conditional</animation>
            <animation effect="fade" start="70" time="1200" condition="true" pulse="true">Conditional</animation>
        </control>
        <control type="list" id="5000">
            <left>-90</left>
            <top>0</top>
            <width>2100</width>
            <height>1080</height>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <animation effect="fade" start="0" end="100" time="300" tween="sine">WindowOpen</animation>
            <scrolltime tween="sine">400</scrolltime>
            <orientation>Horizontal</orientation>
            <itemlayout height="1080" width="1920">
                <control type="image">
                    <left>90</left>
                    <top>0</top>
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>keep</aspectratio>
                    <fadetime>200</fadetime>
                    <texture>$INFO[ListItem.Property(image)]</texture>
                </control>
            </itemlayout>
            <focusedlayout height="1080" width="1920">
                <control type="image">
                    <left>90</left>
                    <top>0</top>
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>keep</aspectratio>
                    <fadetime>200</fadetime>
                    <texture>$INFO[ListItem.Property(image)]</texture>
                </control>
            </focusedlayout>
        </control>
        <!-- Fen Logo, Info and Clock & Date -->
        <control type="group">
            <animation effect="fade" start="0" end="100" delay="800" time="450">WindowOpen</animation>
            <control type="image">
                <top>0</top>
                <left>0</left>
                <width>1920</width>
                <height>90</height>
                <texture colordiffuse="80302F2F">fen_common/white.png</texture>
            </control>
            <control type="image">
                <top>15</top>
                <left>5</left>
                <width>60</width>
                <height>60</height>
                <aspectratio aligny="top">keep</aspectratio>
                <texture>fen_common/fen.png</texture>
            </control>
            <control type="label">
                <top>20</top>
                <left>1590</left>
                <width max="300">auto</width>
                <height>20</height>
                <font>font37</font> <!-- FEN_38 -->
                <textcolor>FFCCCCCC</textcolor>
                <align>right</align>
                <aligny>center</aligny>
                <label>[B]$INFO[System.Time][/B]</label>
            </control>
            <control type="label">
                <top>50</top>
                <left>1540</left>
                <width max="350">auto</width>
                <height>20</height>
                <font>font10</font> <!-- FEN_21 -->
                <textcolor>FFCCCCCC</textcolor>
                <align>right</align>
                <aligny>center</aligny>
                <label>$INFO[System.Date]</label>
            </control>
            <control type="label">
                <left>350</left>
                <top>32</top>
                <width max="1220">auto</width>
                <height>20</height>
                <font>font10</font> <!-- FEN_21 -->
                <textcolor>FFFFFFFF</textcolor>
                <align>center</align>
                <aligny>center</aligny>
                <label>[UPPERCASE][B]$INFO[Container(5000).ListItem.Property(title)][/B][/UPPERCASE]</label>
            </control>
        </control>
    </controls>
</window>
